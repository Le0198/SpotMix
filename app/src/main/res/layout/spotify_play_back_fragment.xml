<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/spotify_play_back_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_bg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.PartyActivity">

    <LinearLayout
        android:paddingTop="50dp"
        android:id="@+id/album_background"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/current_track_album_cover_img_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            tools:ignore="ContentDescription"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:background="#121212"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <ImageButton
            android:id="@+id/prev_track_img_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_skip_previous_24dp"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/play_pause_img_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_play_arrow_24dp"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/next_track_img_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_skip_next_24dp"
            tools:ignore="ContentDescription" />

    </LinearLayout>
</LinearLayout>