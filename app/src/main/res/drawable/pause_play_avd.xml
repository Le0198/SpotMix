<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="36dp"
            android:height="36dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <path
                android:name="pause_left"
                android:fillColor="#fff"
                android:pathData="M 6 19 L 10 19 L 10 5 L 6 5 L 6 19 L 6 19"
                android:strokeWidth="1" />
            <path
                android:name="pause_right"
                android:fillColor="#fff"
                android:pathData="M 18 19 L 18 5 L 14 5 L 14 19 Z"
                android:strokeWidth="1" />
        </vector>
    </aapt:attr>
    <target android:name="pause_left">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="300"
                android:interpolator="@android:interpolator/fast_out_slow_in"
                android:propertyName="pathData"
                android:valueFrom="M 6 19 L 10 19 L 10 5 L 6 5 L 6 19 L 6 19"
                android:valueTo="M 8 19 L 13.5 15.5 L 13.5 8.5 L 8 5 L 8 5 L 8 19"
                android:valueType="pathType" />
        </aapt:attr>
    </target>
    <target android:name="pause_right">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="300"
                android:interpolator="@android:interpolator/fast_out_slow_in"
                android:propertyName="pathData"
                android:valueFrom="M 18 5 L 14 5 L 14 19 L 18 19 L 18 5"
                android:valueTo="M 19 12 L 13.5 8.5 L 13.5 15.5 L 19 12 L 19 12"
                android:valueType="pathType" />
